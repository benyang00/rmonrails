 <h1>Staff Login</h1>

<div class="row">

  <div class="col-md-4 col-md-offset-4">

    <%= form_for(:session, url: staffs_login_path) do |f| %> <!-- url here can be gotten from rails routes + _path -->

    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.hidden_field :login_mtd, value: 'std'  %>

    <%= f.submit "Log in", class: "btn btn-primary" %>

    <% end %>

      <%= link_to "New staff signup", staffs_signup_path %>

  </div>

</div>
