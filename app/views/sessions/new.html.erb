<h1>Staff Login</h1>

<div class="row">

  <div class="col-md-6 col-md-offset-3">

    <%= form_for(:session, url: staffs_login_path) do |f| %> <!-- url here can be gotten from rails routes + _path -->

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log in", class: "btn btn-primary" %>

    <% end %>
    <p>New user? <%= link_to "Sign up now!", staffs_signup_path %></p>

  </div>

</div>
